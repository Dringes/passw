def is_very_long(password: str) -> bool:
    return len(password) >= 12


def has_digit(password: str) -> bool:
    return any(ch.isdigit() for ch in password)


def has_lower_letters(password: str) -> bool:
    return any(ch.islower() for ch in password)


def has_upper_letters(password: str) -> bool:
    return any(ch.isupper() for ch in password)


def has_symbols(password: str) -> bool:
    has_non_alnum = any(not ch.isalnum() for ch in password)
    return has_non_alnum


CHECKS = (
    is_very_long,
    has_digit,
    has_lower_letters,
    has_upper_letters,
    has_symbols,
)


def main() -> None:
    password = input("Ваш пароль: ")
    score = 0

    for check in CHECKS:
        if check(password):
            score += 2

    print("Рейтинг:", score)


if __name__ == "__main__":
    main()
