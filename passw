SCORE = 0

my_str = input('Ваш пароль: ')


def is_very_long(my_str):
    return len(my_str) > 12


def has_digit(my_str):
    return any(passw.isdigit() for passw in my_str)


def has_lower_letters(my_str):
    return any(passw.islower() for passw in my_str)


def has_upper_letters(my_str):
    return any(passw.isupper() for passw in my_str)


def has_symbols(my_str):
    return any(
        (not passw.isalpha()) and (not passw.isdigit())
        for passw in my_str
    )


CHECKS = [
    is_very_long,
    has_digit,
    has_lower_letters,
    has_upper_letters,
    has_symbols,
]

for check in CHECKS:
    if check(my_str):
        SCORE += 2

print('Рейтинг:', SCORE)
